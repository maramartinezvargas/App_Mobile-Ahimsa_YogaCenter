<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PERMISOS DE CONTACTOS -->
    <!-- Indica que la app necesita acceder a los contactos del dispositivo -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AE1_PMDM_TamaraMartinezVargas">

        <!-- Splash = primera pantalla al iniciar -->
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.LoginActivity" android:exported="false" />
        <activity android:name=".ui.RegistroActivity" android:exported="false" />
        <activity android:name=".ui.CalendarioActivity" android:exported="false" />
        <activity android:name=".ui.ConfirmacionActivity" android:exported="false" />
        <activity android:name=".ui.PerfilActivity" android:exported="false" />

        <!-- MainActivity no se lanza directamente -->
        <activity android:name=".MainActivity" android:exported="false" />


    </application>
</manifest>

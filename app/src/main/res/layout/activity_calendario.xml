<?xml version="1.0" encoding="utf-8"?>
<!--
    activity_calendario.xml

    Pantalla principal de selección de fecha y hora para la reserva de sesiones de yoga.
    Incluye:
    - Logo y cabecera con foto y nombre del usuario.
    - Botón para acceder al perfil.
    - CalendarView para seleccionar la fecha.
    - Spinner para seleccionar la hora de la sesión.
    - Botón "Reservar" para confirmar la reserva.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/calendar_background">

    <!-- Contenedor principal centrado -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Logo de la app -->
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ahimsa_logo"
            android:layout_marginBottom="4dp" />

        <!-- Cabecera usuario: foto, nombre y botón perfil -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/ivPerfil"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:contentDescription="@string/perfil"
                android:src="@drawable/foto_perfil1"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:clipToOutline="true"
                android:outlineProvider="background" />

            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="12dp"
                android:text="Nombre del usuario"
                android:textSize="18sp"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/btnVerPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ver perfil"
                android:backgroundTint="#a98ea8"
                android:textColor="#ffffff" />
        </LinearLayout>

        <!-- Calendario para seleccionar fecha -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#70FFFFFF" />

        <!-- Selector de hora -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selecciona hora:"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/spinnerSesiones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Botón de reserva -->
        <Button
            android:id="@+id/btnReservar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#a98ea8"
            android:text="Reservar"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
